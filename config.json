{
  "source": ["tokens/*.json"],
  "platforms": {
    "scss": {
      "transformGroup": "custom/scss",
      "buildPath": "tokens/transform/scss/",
      "files": [{
        "destination": "_variables.scss",
        "format": "scss/variables"
      }]
    },
    "css": {
      "transformGroup": "custom/css",
      "buildPath": "tokens/transform/css/",
      "files": [{
        "destination": "_variables.css",
        "format": "css/variables",
        "filter": "validToken",
        "options" : {
          "showFileHeader": false
        }
      }]
    },
    "json-flat": {
      "transformGroup": "js",
      "buildPath": "tokens/transform/json/",
      "files": [
        {
          "destination": "styles.json",
          "format": "json/flat"
        }
      ]
    }
  }
}